<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.datastructures.chatty"
    android:theme="@android:style/Theme.NoTitleBar">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_img_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name="com.datastructures.chatty.ui.main.SettingActivity"
            android:launchMode = "singleTop"
            android:exported="false" />
        <activity
            android:name=".screens.authentication.LoginFormActivity"
            android:exported="false"
            android:launchMode = "singleTop"
            />
        <activity
            android:name="com.datastructures.chatty.screens.chat.VideoActivity"
            android:launchMode = "singleTop"
            android:exported="false" />
        <activity
            android:name="com.datastructures.chatty.screens.chatroom.ChatRoom_activity"
            android:exported="false"
            android:launchMode = "singleTop"
            />
        <activity
            android:name="com.datastructures.chatty.screens.status.AddTextStory"
            android:launchMode = "singleTop"
            android:exported="false" />
        <activity
            android:name="com.datastructures.chatty.screens.status.AddImageActivity"
            android:exported="false"
            android:launchMode = "singleTop"
            />
        <activity
            android:name="com.datastructures.chatty.ui.main.Home"
            android:exported="true"
            android:launchMode = "singleTop"
            />
        <activity
            android:name="com.datastructures.chatty.screens.chat.AddNewContact"
            android:exported="false"
            android:launchMode = "singleTop"
            />
        <activity
            android:name="com.datastructures.chatty.ui.main.SplashScreen"
            android:launchMode = "singleTop"
            android:exported="true"
            android:theme="@style/Theme.MyApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.datastructures.chatty.screens.authentication.VerifyPhoneNumber"
            android:launchMode = "singleTop"
            android:exported="true" />
        <activity
            android:name="com.datastructures.chatty.screens.authentication.SignUp"
            android:launchMode = "singleTop"
            android:exported="true" />
    </application>

</manifest>
